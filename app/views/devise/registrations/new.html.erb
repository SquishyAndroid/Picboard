<% content_for :head do %>
  <title>Pixbored | Sign Up</title>
<% end %>

<div class="panel panel-default">
	<div class="panel-heading">
		<div class="panel-title">
			<h2>Sign Up</h2>
		</div>
	</div>

	<div class="panel-body">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="social-login">
    <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-primary btn-lg btn-facebook" do %>
      <i class="fa fa-facebook"></i>
        <strong>Sign up with Facebook</strong>
    <% end %>
  </div>
		  <hr>
		  <div class = "form-group">
		  	<%= f.label :Username %>
		  	<%= f.text_field :name, :maxlength => 16, autofocus: true, class: "form-control" %>
		  </div>

		  <div class = "form-group">
		  	<%= f.label :Email %>
		  	<%= f.email_field :email, autofocus: true, class: "form-control" %>
		  </div>

		  <div class = "form-group">
		  	<%= f.label :password %>
		  	<%= f.password_field :password, class: "form-control" %>
		  </div>
		  <p class ="agreement">
		  		By registering you agree to our 
		  			<%= link_to "Terms of Service", terms_of_service_path %> and
		  			<%= link_to "Privacy Policy", privacy_policy_path %>
		  	</p>
		  <div class = "form-group">
		  		<%= f.submit "Sign up", class: "btn btn-danger btn-responsive" %>
		  </div>
		<% end %>
	</div>
</div>

