<div class="row">
	<div class="col-md-offset-3 col-md-5">
		<div class="panel panel-default">
			<%= image_tag @pin.image.url(:original) %>
			<div class="panel-body">
				<table>
					<tr>
						<td rowspan="3"><div class="round-image-50"><%= image_tag(@pin.user.avatar.url(:thumb)) %></div></td>
						<td><p><strong><%= @pin.user.name if @pin.user %></strong></p></td>
					</tr>
					<tr>
						<td><p><%= @pin.description %></p></td>
					</tr>
				</table>
				<% if @pin.user == current_user %>
				<div class="show_actions">
          <%= link_to @pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
					<%= link_to edit_pin_path(@pin) do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
        </div>
        <div class="timestamp">
					<%= time_ago_in_words(@pin.created_at) %> ago
				</div>
      <% end %>
		</div>
	</div>
</div>