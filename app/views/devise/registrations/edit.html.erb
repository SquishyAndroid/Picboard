<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h2>Account</h2>
    </div>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class = "form-group">
        <%= f.label :avatar %><br />
        <%= image_tag(current_user.avatar.url(:thumb)) %><br><br>
        <%= f.file_field :avatar, class: "form-control" %>
      </div>

      <div class = "form-group">
        <%= f.label :Username %><br />
        <%= f.text_field :name, :maxlength => 16, class: "form-control", autofocus: true %>
      </div>

      <div class = "form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class = "form-group">
        <%= f.label :New_Password %>
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
        <span class="help-block">
          <em>Leave this field blank if you do not wish to change your password</em>
        </span>
      </div>

      <div class = "form-group">
        <%= f.label :Current_Password %>
        <%= f.password_field :current_password, class: "form-control" %>
        <span class="help-block">
          <em>Enter your current password to confirm the changes</em>
        </span>
      </div>

      <div class = "form-group">
        <%= f.submit "Update Account", class: "btn btn-danger btn-lg btn-responsive" %>
      </div>
    <% end %>
  </div>
</div>
<br>
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h3>Cancel My Account</h3>
    </div>
  </div>
  <div class="panel-body">
    <div class = "form-group">
      <br>
     <p class="text-muted">If at any point you decide you no longer wish to have an account registered with us, you may remove your account by selecting the Cancel Account button below.
      <br>
     <%= button_to "Cancel Account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-default btn-md" %>
    </div>
  </div>
</div>

<div class= "terms-footer">
  <%= link_to "Terms of Service", terms_of_service_path %>&nbsp;&nbsp;&nbsp;&nbsp;
  <%= link_to "Copyright Policy", copyright_policy_path %>
</div>
