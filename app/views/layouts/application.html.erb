	<%= render 'layouts/header' %>
	<div class="container">
		<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert alert-warning", id: "flash" ) %>
		<% end %>

		<%= yield %>
	</div>
</body>
</html>


