<%= render 'pages/home' unless user_signed_in? %>


<div id="pins">
<% @pins.each do |pin| %>
  <div class="box panel panel-default">
    <%= link_to image_tag(pin.image.url(:medium)), pin %>
    <div class="panel-body">
      <table>
        <tr>
          <td rowspan="3"><div class="round-image-50"><%= image_tag(pin.user.avatar.url(:thumb)) %>
          </div></td>
          <td><p><strong><%= pin.user.name if pin.user %></strong></p></td>
        <tr>
          <td><p><%= pin.description %></p></td>
        </tr>
      </table>
      <% if pin.user == current_user %>
        <div class="show_actions">
          <a href="#"><span class="glyphicon glyphicon-comment"></span></a>
          <a href="#"><span class="glyphicon glyphicon-heart"></span>
          </a>
        </div>
      <% end %>
      <div class="timestamp">
          <%= time_ago_in_words(pin.created_at) %> ago
        </div>
    </div>
  </div>
<% end %>
</div>


<%= will_paginate @pins, renderer: BootstrapPagination::Rails %>

